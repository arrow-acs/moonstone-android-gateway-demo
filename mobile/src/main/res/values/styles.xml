<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/main_black</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/main_black</item>
        <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
        <item name="colorAccent">@color/main_green</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SampleTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/main_green</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Spinner" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/main_green</item>
        <item name="colorAccent">@color/main_green</item>
    </style>

    <style name="LaunchScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/launch_screen</item>
    </style>

    <style name="EventChoiceSpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@color/main_white</item>
        <item name="android:dropDownSelector">@color/main_black</item>
    </style>

    <style name="SpinnerTheme" parent="AppTheme">
        <item name="android:spinnerStyle">@style/EventChoiceSpinnerTheme</item>
    </style>

</resources>
